<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4800"
    tools:context=".Basket">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mg_top_tv"
        android:textColor="@color/white"
        android:text="@string/basketball" />

    <ImageView
        android:id="@+id/img"
        android:layout_below="@id/textView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mg_top_from_img"
        android:layout_height="@dimen/height_img_basket"
        android:foreground="@drawable/golden_state_warriors_v_houston_rockets_1_5862751" />

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mg_top_from_img"
        android:text="@string/retour" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/basket_img_width"
        android:layout_height="@dimen/basket_img_height"
        android:layout_marginBottom="@dimen/basket_img_mg_bottom"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/bo506733_600x600" />

</RelativeLayout>